
<div class="row d-flex justify-content-around">
  <% @cocktails.each do |c| %>
    <%#= link_to cocktail_path(c) do %>
      <!-- <div class="col-12 col-lg-4"> -->

        <article class="cocktail_card">
          <div class="thumb" style="background: url(<%= c.photo %>) no-repeat center;"></div>
          <div class="infos">
            <h2 class="title"><%= c.name %>
              <!-- <span class="flag"></span> -->
            </h2>
            <h3 class="date">The best summer drink</h3>
            <h3 class="seats">seats remaining: 2</h3>
            <p class="txt">
              <% c.ingredients.each do |i| %>
                <%= i.name %>
              <% end %>
            </p>
            <%= link_to 'details', cocktail_path(c), class: 'details' %>
          </div>
        </article>

      <!-- </div> -->
    <%# end %>
  <% end %>
</div>

