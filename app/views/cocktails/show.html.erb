<h1><%= @cocktail.name %></h1>

<% @cocktail.doses.each do |d| %>
  <p><%= d.description %> <%= d.ingredient.name %> <%= link_to 'Delete', dose_path(d), method: :delete, data: { confirm: 'Are you sure?' } %></p>
<% end %>


<h3>Add ingredient</h3>
<p><%= render 'doses/form', dose: @dose %></p>

<h3>Add review</h3>
<p><%= render 'reviews/form', review: @review %></p>


<h3>Reviews</h3>
<% @cocktail.reviews.each do |r| %>
  <p><% r.rating.times do %>
    <%= '🍸' %>
  <% end %>
  </p>
  <p><%= r.content %></p>
<% end %>
